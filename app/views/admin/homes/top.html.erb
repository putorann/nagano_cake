<h1>注文履歴一覧</h1>
<div class="container">
  <div class="raw">
    <div class="col">

      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= link_to order.created_at,admin_order_path(order.id) %></td>
            <td><%= order.name %></td>
            <td><%= order.order_products.sum(:amount) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>

    </div>
  </div>
</div>

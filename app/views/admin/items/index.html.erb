<h1>商品一覧</h1>
<%= link_to "新規登録画面へ",new_admin_item_path %>
<div class="container px-5 px-sm-0">
  <div class="row">
  <div class="colmd-8 offset-md-1">

<table class="table table-bordered">
 <thead class="thead-light">
 <tr>
 <th>商品ID</th>
 <th>商品名</th>
 <th>税抜価格</th>
 <th>ジャンル</th>
 <th>ステータス</th>
 </tr>
 </thead>
 <% @items.each do |item| %>

 <tbody>
  <tr>
   <td><%= item.id %></td>
   <td><%= link_to item.name, admin_item_path(item.id) %></td>
   <td><%= item.price %></td>
   <td><%= item.genre.name %></td>
   <td> <% if item.is_active %>
 販売中
 <% else %>
 販売停止中
 <% end %></td>
  </tr>
 </tbody>

 <% end %>

 </div>
 </div>
 </div>

<h1>商品詳細</h1>

<div class="container">
 <div class="row">
  <div class="col-4"><%= image_tag @item.get_image(100,100) %></div>
  <div class="col-6">
   <table>
    <tr><th>商品名</th><td><%= @item.name %></td></tr>
    <tr><th>商品説明</th><td><%= @item.introduction %></td></tr>
    <tr><th>ジャンル</th><td><%= @item.genre.name %></td></tr>
    <tr><th>税込価格(税抜価格)</th><td><%= (@item.price * 1.1).to_i %> （<%= @item.price %>)</td></tr>
    <tr><th>ステータス</th>
    <td>
     <% if @item.is_active %>
      販売中
     <% else %>
      販売停止中
     <% end %>
     </td>
     </tr>
   </table>
   <%= link_to "編集する", edit_admin_item_path(@item.id),class:"btn btn-success" %>
  </div>
  <div class="2"></div>
 </div>
</div>



<h1>注文履歴一覧</h1>
<div class="container">
  <div class="raw">
    <div class="col">

 <table border="1" width="100%">
  <thead>
   <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>注文詳細</th>
   </tr>
  </thead>

  <% @orders.each do |order| %>

  <tbody>
   <tr>
    <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
    <td><%= order.postal_code %><br>
        <%= order.address %><br>
        <%= order.name %>
    </td>

    <td>
    <% order.order_products.each do |order_product| %>
    <%= order_product.item.name %><br>
    <% end %>
    </td>

    <td><%= order.amount_builled %></td>
    <td><%= link_to "表示する",order_path(order.id),class:"btn btn-primary" %></td>
   </tr>
  </tbody>

  <% end %>
</table>

  </div>
 </div>
</div>

<h1>注文履歴詳細</h1>

<div class="container">
  <div class="row">
    <div class="col-8">
      <% @order.order_products.each do |order_product| %>
      <% @total_amount += order_product.price * order_product.amount %>
      <% end %>
      <table border="1">
        <strong>注文情報</strong>
        <tr><th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
        <tr><th>配送先</th><td><%= @order.postal_code %><%= @order.address %> <%= @order.name %></td></tr>
        <tr><th>支払い方法</th><td><%= @order.method_of_payment_i18n %></td></tr>
      </table>


    </div>
    <div class="col-4">
      <table border="1">
        <strong>請求情報</strong>
        <tr><th>商品合計</th><td><%= @total_amount %></td></tr>
        <tr><th>配送料</th><td><%= @postage %></td></tr>
        <tr><th>ご請求額</th><td><%= @order.amount_builled %></td></tr>
      </table>

    </div>
  </div>
</div>

<div class="container">
  <div class="raw">
    <table border="1">
      <strong>注文内容</strong>
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <% @order.order_products.each do |order_product| %>
      <tbody>
        <tr>
          <td><%= order_product.item.name %></td>
          <td><%= order_product.price %></td>
          <td><%= order_product.amount %></td>
          <td><%= order_product.price*order_product.amount %></td>
        </tr>
      </tbody>
      <% end %>
    </table>

  </div>
</div>